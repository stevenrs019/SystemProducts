@model SystemProducts.Models.USUARIOS

@{
    ViewBag.Title = "Registro de Usuario";
}

<h2 class="text-center text-success">Registro de Usuario</h2>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@using (Html.BeginForm("Crear", "Registro", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Apellido)
        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Correo)
        @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", required = "required", type = "email" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Contraseña)
        @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control", required = "required" })
    </div>

    <!-- Rol por defecto oculto como 'Cliente' -->
    @Html.HiddenFor(model => model.Rol, new { @Value = "Cliente" })

    <div class="form-group mt-4 text-center">
        <button type="submit" class="btn btn-success w-100">Registrarse</button>
    </div>
}

<!-- Botón para regresar al login -->
<div class="form-group mt-3 text-center">
    <a href="@Url.Action("Index", "Login")" class="btn btn-secondary">← Volver al Login</a>
</div>
